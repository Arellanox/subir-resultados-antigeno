<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.REFINERIA" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00FFFFFF</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#5D6D7E</item>
        <item name="colorOnPrimary">#34495E</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="OulineInput" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorFondoOscuro</item>
    </style>

    <style name="DatePickerTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorFondoOscuro</item>                <!--header background-->
        <item name="android:windowBackground">@color/backgroundColor</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorPrimaryVariant</item> <!--selected day-->
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item>    <!--days of the week-->
    </style>

    <style name="SpinnerItems" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:state_hovered">@color/colorFondoOscuro</item>
    </style>
</resources>